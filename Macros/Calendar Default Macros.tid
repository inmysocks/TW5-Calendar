tags: $:/tags/Macro
title: $:/plugins/OokTech/Calendar/Calendar Default Macros

\define CalendarListDailyThingsFullDateString(day month year)
<$button
  class='tc-btn-invisible'
  style='width:100%;height:100%'
>
  <$action-navigate
    $to="$(day)$-$(month)$-$(year)$"
  />
  <div
    style='height:100%;width:100%;position:relative;text-align:left;vertical-align:top;z-index=0'
  >
    ''$day$''<br>
    <$list
      filter='[has[$day$-$month$-$year$]]-[[$:/temp/MakeCalendarEntry]]'
    >
      <$view
        field='title'
      />
      <br>
    </$list>
  </div>
</$button>
\end

