    class='tc-btn-invisible'
    style='width:100%;height:100%;border:0px;border-left:0px;border-top:0px;padding:0px 0px 0px 0px;'
  >
    <$action-navigate
      $to="""$day$-$month$-$year$"""
    />
    <div
      style='height:100%;width:100%;position:relative;text-align:left;vertical-align:top;z-index=0'
    >
      ''$day$''
      <br>
      <$list
        filter='[day[$day$]month[$month$]year[$year$]]-[[$:/temp/MakeCalendarEntry]]'
      >
        <$view
          field='title'
        />
        <br>
      </$list>
    </div>
  </$button>
</$list>
\end